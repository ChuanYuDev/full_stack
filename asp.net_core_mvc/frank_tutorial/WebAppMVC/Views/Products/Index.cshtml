@model List<Product>

@section title{
    <h3>Manage Products</h3>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product Category</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th></th>
                <th></th>
            </tr>

        </thead>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.CategoryId</td>
                    <td>@product.Name</td>
                    <td>@($"${product.Price}")</td>
                    <td>@product.Quantity</td>
                </tr>
            }
        <tbody>

        </tbody>
    </table>
}